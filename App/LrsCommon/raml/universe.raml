/monthly:
  get:
    description: Need to bring case number for previous month
    queryParameters:
      start_date:
        example: 2016-09-01
        required: true
      end_date:
        example: 2016-10-29
        required: true
    responses:
      200:
        body:
          application/json:
            schema: !include CaseDetailsSchema.json
            example: !include CaseDetails.json
      400:
        headers:
          application/json:
            type: string
        body:
          application/json:
      500:
        headers:
          application/json:
            type: string
        body:
          application/json:
