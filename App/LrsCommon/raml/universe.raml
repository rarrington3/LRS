/lenderMonitoring:
  get:
    description: Need to bring case number based on the start & end date
    queryParameters:
      mortgee_id:
        example: 22823
        required: true
        type: integer
      review_type:
        example: Underwriting
        required: true
      start_date:
        example: 2016-09-01
        required: true
      end_date:
        example: 2016-10-29
        required: true
      Loan_Type:
        example: 02
        required: false
        type: integer
    responses:
      200:
        body:
          application/json:
            schema: !include CaseDetailsSchema.json
            example: !include CaseDetails.json
      400:
        headers:
          application/json:
            type: string
        body:
          application/json:
      500:
        headers:
          application/json:
            type: string
        body:
          application/json:
