{
    "id": "http://LRS/Document",
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required": ["documentId", "documentType", "fileName" ],
    "additionalProperties": false,
    "properties": {
        "documentId": {
            "description": "Unique document ID (GUID)",
            "type": "string"
        },
        "documentType": {
            "description": "Mitigation upload, operational doc, indem letter, etc. This is *not* the file type.",
            "type": "string"
        },
        "fileName": {
            "description": "The name of the file (e.g. Mit_1_Uploaded_file_1.pdf)",
            "type": "string"
        }
    }
}
